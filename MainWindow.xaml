<Window x:Class="couples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:couples"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000">
    <Grid>
        <Grid Width="800" Height="800" Background="Aqua">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Background="Aquamarine" Click="BT_Zero_Zero">
                <Image x:Name="BT_Z_Z"></Image>
            </Button>
            <Button Grid.Column="0" Grid.Row="1" Background="Aquamarine"/>
            <Button Grid.Column="0" Grid.Row="2" Background="Aquamarine"/>
            <Button Grid.Column="0" Grid.Row="3" Background="Aquamarine"/>
            <Button Grid.Column="1" Grid.Row="0" Background="Aquamarine"/>
            <Button Grid.Column="1" Grid.Row="1" Background="Aquamarine"/>
            <Button Grid.Column="1" Grid.Row="2" Background="Aquamarine"/>
            <Button Grid.Column="1" Grid.Row="3" Background="Aquamarine"/>
            <Button Grid.Column="2" Grid.Row="0" Background="Aquamarine"/>
            <Button Grid.Column="2" Grid.Row="1" Background="Aquamarine"/>
            <Button Grid.Column="2" Grid.Row="2" Background="Aquamarine"/>
            <Button Grid.Column="2" Grid.Row="3" Background="Aquamarine"/>
            <Button Grid.Column="3" Grid.Row="0" Background="Aquamarine"/>
            <Button Grid.Column="3" Grid.Row="1" Background="Aquamarine"/>
            <Button Grid.Column="3" Grid.Row="2" Background="Aquamarine"/>
            <Button Grid.Column="3" Grid.Row="3" Background="Aquamarine"/>
        </Grid>
        
    </Grid>
</Window>
